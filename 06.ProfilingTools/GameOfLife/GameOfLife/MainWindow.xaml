<Window x:Class="GameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game of Life" Height="522" Width="804" Background="Gray" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="ThreeDBorderWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="127*"/>
            <ColumnDefinition Width="275*"/>
        </Grid.ColumnDefinitions>
        <Canvas Name="MainCanvas" HorizontalAlignment="Left" Height="447" VerticalAlignment="Top" Width="776" Margin="10,34,0,0" Background="Gray" Grid.ColumnSpan="2"/>
        <Button Name="ButtonStart" Click="Button_OnClick" Content="Start&#xD;&#xA;" HorizontalAlignment="Left" Height="21" Margin="5,4,0,0" VerticalAlignment="Top" Width="83"/>
        <Label Name="lblGenCount" Content="Generations: " HorizontalAlignment="Left" Margin="362,1,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.158,1.423" Width="170" Height="26" Grid.Column="1"/>
        <Border BorderBrush="DarkGray" BorderThickness="1" HorizontalAlignment="Left" Height="1" Margin="0,28,0,0" VerticalAlignment="Top" Width="796" Grid.ColumnSpan="2"/>
        <Button Name="ButtonClear" Content="Clear" HorizontalAlignment="Left" Margin="93,4,0,0" VerticalAlignment="Top" Width="75" Click="ButtonClear_Click"/>

    </Grid>
</Window>
